<div class="row">
  <div class="col"></div>
  <div class="container col-10 col-sm-6 col-xl-4 m-4 mx-auto shadow p-4">
<form method="post" action="/login/handle-submit">
  <div class=" d-flex justify-content-between align-items-end mb-3">
    <h3 class="fs-2 fw-bold text-center">Login</h3>
    <label class="form-check-label pb-2" >Need an account? <a href="/login/sign-in">Sign in</a></label>
  </div>

  {{!-- email field --}}
  <div class="mb-4 form-group">
    <label for="email" class="form-label fw-medium">Email</label>
    <input name="email" placeholder="Enter your email ..." type="email" class="form-control py-2 " id="email" aria-describedby="emailHelp">
  </div>

  {{!-- password field --}}
  <div class="mb-4 form-group">
    <label for="password" class="form-label fw-medium">Password</label>
    <input name="password" placeholder="Enter your password ..." type="password" class="form-control py-2" id="password">
  </div>

  {{!-- sub field --}}
  <div class="d-flex justify-content-between mb-4">
    <div class="form-check form-group">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <div class="form-group">
      <a href="#" class="forgot">Forgot password?</a>
    </div>
  </div>

  {{!-- summit button --}}
  <div class="d-flex">
    <button type="submit" class="btn btn-primary w-50 mx-auto">Login</button>
  </div>
</form>
</div>
  <div class="col"></div>
</div>